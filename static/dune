    (action  (run otb-build build toc -o . -repo-root ..)))

(alias (name site) (deps algodiff.html))

(rule
  (targets algodiff.html)
  (deps    (:x ../book/algodiff.html)
           (alias ../book/html)
           ../bin/bin/app.exe
           ../book/toc.scm)
  (action  (run otb-build build chapter -o . -repo-root .. %{x})))

