(alias
  (name html)
  (deps prologue.html
        introduction.html
        ndarray.html))

(rule
  (targets prologue.html)
  (deps    prologue/README.md)
  (action  (run mdx output %{deps} -o %{targets})))

(rule
  (targets introduction.html)
  (deps    introduction/README.md)
  (action  (run mdx output %{deps} -o %{targets})))

(rule
  (targets ndarray.html)
  (deps    ndarray/README.md)
  (action  (run mdx output %{deps} -o %{targets})))


